<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:VidyamAcademy"
             xmlns:converters ="clr-namespace:VidyamAcademy.Converters"
             x:Class="VidyamAcademy.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!--Registering the converterDictionary-->
            <converters:BoolToOverlayImageConverter x:Key="BoolToOverlayImageConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
