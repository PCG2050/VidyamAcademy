<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:converters="clr-namespace:VidyamAcademy.Converters"
             x:Class="VidyamAcademy.Views.VideosPage"
             Title="{Binding Title}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:BoolToOverlayImageConverter x:Key="BoolToOverlayImageConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <Grid Padding="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <toolkit:MediaElement
                x:Name="mediaElement"
                Aspect="AspectFit"
                Background="Black"
                HeightRequest="300"
                HorizontalOptions="FillAndExpand"
                ShouldAutoPlay="False"
                ShouldShowPlaybackControls="True"
                IsVisible="False"
                Grid.Row="0" />

            <CollectionView
                x:Name="videosCollectionView"
                ItemsSource="{Binding Videos}"
                VerticalOptions="FillAndExpand"
                HorizontalOptions="FillAndExpand"
                Grid.Row="1"
                Margin="0,10">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="2" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame HasShadow="True" BorderColor="Gray" CornerRadius="10" Padding="0" Margin="10">
                            <Grid Padding="0,0,0,5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Label Text="{Binding Title}" FontSize="Medium" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center" Grid.Row="0" />
                                <Grid Grid.Row="1">
                                    <ImageButton
                                        Clicked="OnThumbnailTapped"
                                        Pressed="OnButtonPressed"
                                        CommandParameter="{Binding EffectiveUrl}"
                                        Source="{Binding ThumbnailUrl}"
                                        HeightRequest="100"
                                        WidthRequest="150"
                                        Aspect="AspectFill"
                                        BackgroundColor="Transparent"
                                        Padding="0"
                                        Margin="0"
                                        HorizontalOptions="FillAndExpand"
                                        VerticalOptions="FillAndExpand" />
                                    <AbsoluteLayout>
                                        <Image
                                            Source="{Binding ., Converter={StaticResource BoolToOverlayImageConverter}}"
                                            Aspect="AspectFit"
                                            HeightRequest="40"
                                            WidthRequest="40"
                                            AbsoluteLayout.LayoutFlags="All"
                                            AbsoluteLayout.LayoutBounds="0.5,0.5,0.5,0.5" />
                                    </AbsoluteLayout>
                                </Grid>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <StackLayout Grid.Row="2" Padding="10">
                <Button Text="PAY NOW" Command="{Binding PayNowCommand}" FontAttributes="Bold" CornerRadius="10"  IsEnabled="{Binding IsPayNowButtonEnabled}" 
                        IsVisible="{Binding IsPayNowButtonEnabled}" />
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>
