<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VidyamAcademy.Views.VideosPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="Videos">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height=".1*"/>
            </Grid.RowDefinitions>

            <toolkit:MediaElement
                x:Name="mediaElement"
                Aspect="AspectFit"
                Background="Black"
                HeightRequest="300"
                HorizontalOptions="FillAndExpand"
                ShouldAutoPlay="False"
                ShouldShowPlaybackControls="True" 
                IsVisible="False"
                Grid.Row="0" />

            <CollectionView 
                x:Name="videosCollectionView" 
                ItemsSource="{Binding Videos}"
                VerticalOptions="FillAndExpand"
                HorizontalOptions="FillAndExpand"
                Grid.Row="1">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Margin="10" VerticalOptions="Start" HorizontalOptions="Center">
                            <Label Text="{Binding Title}" FontSize="Medium" />
                            <ImageButton
                                Clicked="OnThumbnailTapped"
                                CommandParameter="{Binding VideoUrl}"
                                Source="{Binding ThumbnailUrl}"
                                HeightRequest="100"
                                BackgroundColor="Red"
                                Aspect="Fill"
                                Pressed="OnButtonPressed"
                                Released="OnButtonReleased"/>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <StackLayout Grid.Row="2" Padding="10">
                <Button   Text="PAY NOW" FontAttributes="Bold"/>
            </StackLayout>
            
        </Grid>
    </ContentPage.Content>
</ContentPage>
